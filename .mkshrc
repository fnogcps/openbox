# Shell variables
export EDITOR=/usr/bin/vim

# Key bindings
bind '^L=clear-screen'
bind '^[Oc=forward-word'
bind '^[Od=backward-word'

# PS1 prompt
PS1='$(echo -e "\033[1m\033[32m-\$\033[00m") '

# Aliases
alias ..='cd ..'
alias ls='ls --color'
alias la='ls -la'
alias l='ls -CF'
alias mv='mv -v'
alias cp='cp -v'
alias rm='rm -iv'
alias mkdir='mkdir -pv'

# Git aliases
alias gc='git co'
alias gs='git st'
alias gl='git lo'
